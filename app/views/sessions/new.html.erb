<h1>Login</h1>
or <%= link_to "create an account", signup_path %>
<br><br>

<% if flash[:message] %>
    <%= flash[:message] %>
<% end %>

<%= form_tag login_path do %>
    <p><%= text_field_tag :email, nil, placeholder: "Email" %></p>
    <p><%= password_field_tag :password, nil, placeholder: "Password" %></p>
    <p><%= submit_tag "Log In" %></p>
<% end %>

<%= button_to "Log in with Google", '/auth/google_oauth2' %>
<%= button_to "Log in with Facebook", '/auth/facebook' %>
