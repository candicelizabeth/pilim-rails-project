<h1>Add a New Movie</h1>
<p><small>⚠️ You won't be able to edit it later, so make sure all the information is correct! ⚠️</small></p>

<% if @movie.errors.any? %>
  <div id="error_explanation">
    <h3>Oops! We've got some errors here.</h3>

    <ul>
      <% @movie.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @movie do |f| %>
    <%= render partial: "form", locals: {f: f} %>
    <%= f.submit "Add" %>
<% end %>