<div class="container-fluid mt-5">
  <div class="container">
    <div class="row mb-4">
      <div class="col d-flex justify-content-center">
        <%= form_tag movies_path, method: :get do %>
          <div class="input-group search_bar" id="movie_search_padding">
            <%= search_field_tag :search, nil, placeholder: "Search by title", class: "form-control" %>
            <%= submit_tag "Search", name: nil, class: "btn movie_btn" %>
          </div>
        <% end %>
      </div>
      <div class="col d-flex justify-content-center">
        <%= form_with url: movies_path, method: :get do |form| %>
          <div class="input-group">
            <%= form.collection_select :genre_name, @movie_genres, :genre, :genre, {prompt: "Select genre"}, {class: "form-select"} %>
            <%= form.submit "Filter", name: nil, class: "btn movie_btn" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row">
      <% if flash[:message] %>
        <%= render "application/flash_messages" %>
      <% end %>
    </div>
  </div>
  <div class="container">
    <div class="row mb-5">
      <% if params[:genre_name] || params[:search] %>
        <br><%= render partial: "movie_results", locals: { term: @movies } %><br>
        <small>If you can't find the movie you're looking for, it's not in our database yet. <%= link_to "Click here to add it!", new_movie_path %></small><br>
      <% else %>
        <h3>Newest Releases</h3>
        <%= render partial: "movie_results", locals: { term: @newest_movies } %>
      <% end %>
    </div>
  </div>
</div>
