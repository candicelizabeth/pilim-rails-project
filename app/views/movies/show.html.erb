<h1><%= @movie.title %></h1>
Genre: <%= @movie.genre %><br>
Released: <%= @movie.year %><br>

<%= link_to "Add a Review", new_movie_review_path(@movie) %>


<br><br>
<h2>Reviews</h2>
<% @movie.reviews.most_recently_updated.each do |review| %>
    <%= link_to review.user.username, user_path(review.user) %><br>
    <strong><%= review.title %></strong><br>
    ⭐️ <%= review.rating %>/5<br>
    <%= review.comment %><br>
    <% if review.user == current_user %>
        <%= link_to "Edit", edit_review_path(review) %>
        <%= form_tag review_path(review), method: :delete do %>
            <%= submit_tag "Delete" %>
        <% end %>
    <% end %>
    <br><br>
<% end %>
