<h1><%= @movie.title %></h1>
Genre: <%= @movie.genre %><br>
Released: <%= @movie.year %><br>
Overall Rating: ⭐️ <%=  star_rating(@movie) %><br>

<%= link_to "Add a Review", new_movie_review_path(@movie) %><br>

<h2>Featured in these lists</h2>
<ul>
    <% @movie.lists.each do |list| %>
        <li><%= link_to list.title, list_path(list) %></li>
    <% end %>
</ul>

<h2>Reviews</h2>
<% @reviews.each do |review| %>
    <%= link_to review.user.username, user_path(review.user) %><br>
    <strong><%= review.title %></strong><br>
    ⭐️ <%= review.rating %>/5<br>
    <%= review.comment %><br>
    <% if review.user == current_user %>
        <%= link_to "Edit", edit_review_path(review) %>
        <%= form_tag review_path(review), method: :delete do %>
            <%= submit_tag "Delete" %>
        <% end %>
    <% end %>
    <br><br>
<% end %>
<%= link_to "Click here to see more reviews", movie_reviews_path(@movie)%>