<h1>Reviews by</h1>
<%= link_to @user.username, user_path(@user) %>

<br><br>

<% @reviews.each do |review| %>
    <p><%= link_to review.movie.title, movie_path(review.movie) %></p>
    <%= render partial: "review_details", locals: {review: review} %>

    <% if @user == current_user %>
        <%= render partial: "edit_delete", locals: {review: review} %>
    <% end %>
    
<% end %>
