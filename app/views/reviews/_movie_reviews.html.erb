<% @reviews.each do |review| %>
    <%= link_to review.user.username, user_path(review.user) %><br>
    <%= render partial: "reviews/review_details", locals: {review: review} %>
    <% if review.user == current_user %>
        <%= render partial: "reviews/edit_delete", locals: {review: review} %>
    <% end %><br>
<% end %>
