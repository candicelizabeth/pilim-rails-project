<% if @user %>
    <h1>Reviews by</h1>
    <%= link_to @user.username, user_path(@user) %>
    <br><br>
    <% @reviews.each do |review| %>
        <p><%= link_to review.movie.title, movie_path(review.movie) %></p>
        <strong><%= review.title %></strong><br>
        ⭐️ <%= review.rating %>/5<br>
        <%= review.comment %><br>
        <% if logged_in? %>
            <% if @user.id == current_user.id %>
                <%= link_to "Edit", edit_review_path(review) %>
                <%= form_tag review_path(review), method: :delete do %>
                    <%= submit_tag "Delete" %>
                <% end %>
            <% end %>
        <% end %>
    <% end %>
<% elsif @movie %>
    <h1>All Reviews for <%= link_to @movie.title, movie_path(@movie) %></h1>
    <% @reviews.each do |review| %>
        <%= link_to review.user.username, user_path(review.user) %><br>
        <strong><%= review.title %></strong><br>
        ⭐️ <%= review.rating %>/5<br>
        <%= review.comment %><br>
        <% if logged_in? %>
            <% if review.user_id == current_user.id %>
                <%= link_to "Edit", edit_review_path(review) %>
                <%= form_tag review_path(review), method: :delete do %>
                    <%= submit_tag "Delete" %>
                <% end %>
            <% end %>
        <% end %>
        <br>
    <% end %>    
<% end %>
