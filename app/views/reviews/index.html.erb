<h1>Reviews by</h1>
<%= @user.username %>
<br><br>
<% if current_user %>
    <%= link_to "Write a New Review", new_user_review_path(@user) %>
<% end %>
<br><br>
<% @reviews.each do |review| %>
    <p><strong><%= review.movie.title %></strong></p>
    <%= review.title %><br>
    <%= review.rating %><br>
    <%= review.comment %>
<% end %>