<div class="container-fluid float-start my-5 mx-auto">
  <div class="row">
    <div class="col-3 text-end">
      <h2>@<%= @user.username %></h2>
      <h3><%= @user.first_name %> <%= @user.last_name %></h3>
      <h5>Joined: <%= @user.joined %></h5>
      <ul class="nav flex-column">
        <li class="nav-item">
          <%= link_to "Edit Profile", edit_user_path(@user), {class: "nav-link d-inline-flex"} %>
        </li>
        <li class="nav-item">
          <%= link_to "Create a New List", new_list_path, {class: "nav-link d-inline-flex"} %>
        </li>
        <li class="nav-item">
          <%= link_to "My Reviews", user_reviews_path(@user), {class: "nav-link d-inline-flex"} %>
        </li>
      </ul>
    </div>
    <div class="col-7 mt-4">
      <span class="someones_list">My Lists 📝</span>
      <div class="row row-cols-1 row-cols-3 g-4">
        <% @user.lists.each do |list| %>
          <div class="col d-flex justify-content-center">
            <div class="card h-100 card_width">
              <div class="card-body">
                <h5 class="card-title"><%= link_to list.title, list_path(list), {class: "custom_link"} %></h5>
                <p class="card-text"><%= list.description %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
