<% if @user.errors.any? %>
  <div id="error_explanation">
    <h3>Oops! We've got some errors here.</h3>

    <ul>
      <% @user.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1>Create an account</h1>
or <%= link_to "log in", login_path %>
<br><br>

<%= form_for :user do |f| %>
    <p><%= f.text_field :first_name, placeholder: "First Name" %></p>
    <p><%= f.text_field :last_name, placeholder: "Last Name" %></p>
    <p><%= f.text_field :username, placeholder: "Username" %></p>
    <p><%= f.text_field :email, placeholder: "Email" %></p>
    <p><%= f.password_field :password, placeholder: "Password" %></p>

    <p><%= f.submit "Sign Up" %></p>
<% end %>

<%= render "application/omniauth" %>
 