<% if current_user %>
    <h1><%= @user.first_name %> <%= @user.last_name %></h1>
    <h2>@<%= @user.username %></h2>
    <p>Joined: <%= @user.created_at.strftime("%-m/%-d/%Y") %></p>
    <p>Create a New List</p>
    <p>My Reviews</p>
    <p>Write a New Review</p>
    <% @user.lists.each do |list| %>
        <%= link_to list.title, list_path(list) %><br>
    <% end %>
<% else %>
    <h2>@<%= @user.username %></h2>
    <p>Joined: <%= @user.created_at.strftime("%-m/%-d/%Y") %></p>
<% end %>

<% if logged_in? %>
    <%= button_to "Log Out", logout_path %>
<% end %>